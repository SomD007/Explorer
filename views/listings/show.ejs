<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3 listing-title-show-page-parent-div">
            <h3 class="momo-trust-display-regular">
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url %>" 
                class="card-img-top show-img" 
                alt="listing_image"
            />  
            <div class="card-body noto-serif-font">
                <p class="card-text" style="font-style: italic;"><i>Author: <%= listing.owner.username %></i><br></p>
                <p class="card-text ">
                    <%= listing.description %><br>
                </p>
                <p class="card-text">Expected Expense :- &#8377;<%= listing.price.toLocaleString("en-IN") %> <br></p>
                
                <div class="location-country" style="display: flex;">
                    <p class="card-text">
                        <%= listing.location %> |
                    </p>
                    <p class="card-text" style="margin-left: 3px;">
                         <%= listing.state %>
                         
                    </p>
                </div>
                


            </div>
        </div>

        <br>

        <!-- Map Loading animation -->
        <div id="map-loader" class="map-loader">
            <div class="spinner"></div>
            <p>Loading map...</p>
            
        </div>

        <div id="map" data-location="<%= listing.location %>"></div>


        <!-- Define locationString BEFORE script.js -->
        <script>
            const locationString = "<%= listing.location %>";
        </script>
        <!-- <script src="/js/script.js"></script> -->






        <!-- AUTHRIZATION if the Login user(currUser) is the listing's Owner (listing.owner) then display the Edit and Delete Buttons  -->
        <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
            <div class="btns pt-serif-regular">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>



                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark offset-5 ">Delete</button>
                </form>
            </div>
            <% } %>

        <div class="col-6 offset-3 momo-trust-display-regular visit-div">
            <div class="visit-count">
                <%=listing.count %> 
            </div>
            <div class="visit-btn">
                <form method="POST" action="/listings/<%= listing._id %>/visited">
                    <button type="submit">I Visited</button>
                </form>
            </div>
            
            
        </div>
        <div class="info-viewed-btn col-6 offset-3">
                <p><strong>Info!</strong> If you have visited this spot then let others know by clicking this button</p>
        </div>


            <!-- From Uiverse.io by kennyotsu --> 
        <div class="loading-card">
        <div class="loader">
            <p>Discover</p>
            <div class="words">
            <span class="word">Places</span>
            <span class="word">Nature</span>
            <span class="word">Life</span>
            <span class="word">Happiness</span>
            <span class="word">Places</span>
            </div>
        </div>
        </div>



                <div class="col-8 offset-3 mb-3 full-ratings-container pt-serif-regular">
                    <hr>
                    <% if(currUser ){ %>
                        <!-- If the Viewer is logged into the website then only he can write a review -->
                        <h4>Leave a Review</h4>
                        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate
                            class="needs-validation">
                            <!-- <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" min="1" max="5" id="rating" name="review[rating]"
                                    class="form-range">

                            </div> -->


                            <div class="col-8 offset-3 mb-3 rating-stars-card">
                                <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-slot">
                                    
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                        checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">
                                    Please add some comments for review
                                </div>

                            </div>
                            <button class="btn btn-dark">Submit</button>
                        </form>
                        <hr>
                        <% } %>


                            <p><b>All reviews</b></p>
                            <div class="row review-row">

                                <% for(review of listing.reviews){ %>
                                    <div class="card col-5 ms-3 mb-3 review-card">
                                        <div class="card-body">
                                            <h5 class="card-title">@<%= review.author.username %>
                                            </h5>
                                            <p class="starability-result card-text" data-rating="<%= review.rating %>">

                                            </p>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>

                                        </div>
                                        <form class="mb-3" method="POST"
                                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                        </form>
                                    </div>
                                    <% } %>
                            </div>

                </div>
    </div>

    