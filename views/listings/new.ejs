<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Add a new spot</h3>
            <!-- enctype="multipart/form-data" used to send files from HTML frontend to backend -->
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
                <div class="mb-3"> <!-- margin bottom 3-->
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good!</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" rows="8" maxlength="150" required></textarea>
                    <div class="invalid-feedback">Please enter a short description!</div>

                </div>



                <div class="mb-3">
                    <label for="image" class="form-label">Upload Spot Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                </div>


                <div class="row"> <!--Bringing Price and Country input in same line-->
                    <div class="mb-3 col-md-4" >
                        <label for="price" class="form-label">Avg Expense</label>
                        <input name="listing[price]" placeholder="1000" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price!</div>
                    </div>

                    <div class="mb-3 col-md-8" >
                        <label for="country" class="form-label">State</label>
                        <input name="listing[state]" placeholder="Jharkhand" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a State name!</div>
                    </div>
                </div>
                
        
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Ranchi, Jharkhand" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a location!</div>
                </div>
        
                
                <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
                
            </form>
        </div>
    </div>

